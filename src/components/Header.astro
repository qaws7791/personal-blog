---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import ThemeToggle from "@components/ThemeToggle.astro";
import { SITE } from "@consts";
---

<div
  id="global-header"
  transition:persist
  class="bg-bg fixed left-0 right-0 top-0 z-50 py-3"
>
  <Container>
    <div class="flex flex-wrap justify-between gap-y-2">
      <div class="relative flex items-center gap-4">
        <Link href="/" underline={false} class="flex items-center">
          <div class="flex items-center gap-2 text-lg font-semibold">
            <img
              src="/favicon-32x32.png"
              alt="Logo"
              width="24"
              height="24"
              class="h-6 w-6 select-none"
            />

            {SITE.TITLE}
          </div>
        </Link>
        <nav class="flex items-center gap-3 text-sm">
          <a
            href="/articles"
            class="hover:scale-120 flex items-center gap-1 rounded-3xl px-5 py-2 text-sm font-medium transition-all duration-200 ease-in-out"
          >
            <span>Articles</span>
          </a>
        </nav>
      </div>
      <div class="flex gap-2">
        <ThemeToggle />
        <button
          id="magnifying-glass"
          aria-label="Search"
          class="hover:scale-120 box-content flex h-6 w-6 cursor-pointer items-center justify-center gap-1 rounded-full px-2 py-2 text-sm transition-all duration-200 ease-in-out"
        >
          <svg
            height="20"
            stroke-linejoin="round"
            viewBox="0 0 16 16"
            width="20"
            style="color: currentcolor;"
            ><path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M3.5 7C3.5 5.067 5.067 3.5 7 3.5C8.933 3.5 10.5 5.067 10.5 7C10.5 7.88461 10.1718 8.69256 9.63058 9.30876L9.30876 9.63058C8.69256 10.1718 7.88461 10.5 7 10.5C5.067 10.5 3.5 8.933 3.5 7ZM9.96544 11.0261C9.13578 11.6382 8.11014 12 7 12C4.23858 12 2 9.76142 2 7C2 4.23858 4.23858 2 7 2C9.76142 2 12 4.23858 12 7C12 8.11014 11.6382 9.13578 11.0261 9.96544L14.0303 12.9697L14.5607 13.5L13.5 14.5607L12.9697 14.0303L9.96544 11.0261Z"
              fill="currentColor"></path></svg
          >
          <span class="sr-only">Search</span>
        </button>
      </div>
    </div>
  </Container>
</div>
