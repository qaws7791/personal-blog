---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import { SITE } from "@consts";

const navItems = [
  {
    href: "/blog",
    title: "Blog",
  },
  {
    href: "/tags",
    title: "Tags",
  },
];
---

<div
  id="global-header"
  transition:persist
  class="fixed left-0 right-0 top-0 z-50 border-b border-transparent bg-neutral-900/75 py-3 saturate-200 backdrop-blur-sm transition-all"
>
  <Container>
    <div class="flex flex-wrap justify-between gap-y-2">
      <div class="relative flex items-center gap-4">
        <button
          aria-label="open menu"
          class="flex items-center justify-center gap-1 rounded-full border border-white/20 bg-neutral-900/50 px-2 py-2 text-sm transition-colors duration-300 ease-in-out hover:bg-white/5 hover:text-white focus-visible:bg-white/5 focus-visible:text-white
          sm:hidden"
          popovertarget="mobile-menu"
          ><svg
            xmlns="http://www.w3.org/2000/svg"
            height="24px"
            viewBox="0 -960 960 960"
            width="24px"
            style="color: currentcolor;"
            ><path
              fill="currentColor"
              d="M160-240q-17 0-28.5-11.5T120-280q0-17 11.5-28.5T160-320h640q17 0 28.5 11.5T840-280q0 17-11.5 28.5T800-240H160Zm0-200q-17 0-28.5-11.5T120-480q0-17 11.5-28.5T160-520h640q17 0 28.5 11.5T840-480q0 17-11.5 28.5T800-440H160Zm0-200q-17 0-28.5-11.5T120-680q0-17 11.5-28.5T160-720h640q17 0 28.5 11.5T840-680q0 17-11.5 28.5T800-640H160Z"
            ></path></svg
          >

          <span class="sr-only">Open Menu</span>
        </button>
        <nav
          class="fixed m-0 ml-3 mt-16 items-center gap-3 rounded-2xl border border-white/20 bg-neutral-900 p-2 text-base sm:hidden"
          id="mobile-menu"
          popover
        >
          {
            navItems.map((item) => (
              <a
                href={item.href}
                class="flex w-40 items-center gap-1 rounded-3xl bg-neutral-900/50 px-5 py-3 text-sm transition-colors duration-300 ease-in-out hover:bg-white/5 hover:text-white focus-visible:bg-white/5 focus-visible:text-white"
              >
                <span>{item.title}</span>
              </a>
            ))
          }
        </nav>

        <Link href="/" underline={false} class="flex items-center">
          <div class="flex items-center gap-2 text-lg font-semibold">
            <img
              src="/favicon-32x32.png"
              alt="Logo"
              width="24"
              height="24"
              class="h-6 w-6 select-none"
            />

            {SITE.TITLE}
          </div>
        </Link>
      </div>
      <div class="flex gap-2">
        <nav class="hidden items-center gap-3 text-sm sm:flex">
          {
            navItems.map((item) => (
              <a
                href={item.href}
                class="flex items-center gap-1 rounded-3xl border border-white/20 bg-neutral-900/50 px-5 py-2 text-sm transition-colors duration-300 ease-in-out hover:bg-white/5 hover:text-white focus-visible:bg-white/5 focus-visible:text-white"
              >
                <span>{item.title}</span>
              </a>
            ))
          }
        </nav>
        <button
          id="magnifying-glass"
          aria-label="Search"
          class="box-content flex h-6 w-6 items-center justify-center gap-1 rounded-full border border-white/20 bg-neutral-900/50 px-2 py-2 text-sm transition-colors duration-300 ease-in-out hover:bg-white/5 hover:text-white focus-visible:bg-white/5 focus-visible:text-white"
        >
          <svg
            height="20"
            stroke-linejoin="round"
            viewBox="0 0 16 16"
            width="20"
            style="color: currentcolor;"
            ><path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M3.5 7C3.5 5.067 5.067 3.5 7 3.5C8.933 3.5 10.5 5.067 10.5 7C10.5 7.88461 10.1718 8.69256 9.63058 9.30876L9.30876 9.63058C8.69256 10.1718 7.88461 10.5 7 10.5C5.067 10.5 3.5 8.933 3.5 7ZM9.96544 11.0261C9.13578 11.6382 8.11014 12 7 12C4.23858 12 2 9.76142 2 7C2 4.23858 4.23858 2 7 2C9.76142 2 12 4.23858 12 7C12 8.11014 11.6382 9.13578 11.0261 9.96544L14.0303 12.9697L14.5607 13.5L13.5 14.5607L12.9697 14.0303L9.96544 11.0261Z"
              fill="currentColor"></path></svg
          >
          <span class="sr-only">Search</span>
        </button>
      </div>
    </div>
  </Container>
</div>
